{
    "name": "linkaTeca",
    "version": "0.1.0",
    "description": "extension to organize links to articles, books, posts",
    "icons": {
        "16": "src/assets/picon16.png",
        "32": "src/assets/picon32.png",
        "48": "src/assets/picon48.png",
        "128": "src/assets/picon128.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "downloads",
        "unlimitedStorage"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "_favicon/*"
            ],
            "matches": [
                "<all_urls>"
            ],
            "extension_ids": [
                "*"
            ]   
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.ts"
            ]
        }
    ],
    "action": {
        "default_popup": "index.html"
    },
    "manifest_version": 3
}